{
    "env": {
        "node": true,
        "browser": true,
        "es6": true
    },
    "parser": "babel-eslint",
    "extends": [
        "airbnb"
    ],
    "plugins": [
        "react-hooks"
    ],
    "rules": {
        "react/jsx-filename-extension": 0,
        "global-require": 0,
        "react/prop-types": 0,
        "react-hooks/rules-of-hooks": "error",
        "react-hooks/exhaustive-deps": "warn",
        "no-underscore-dangle": ["error", { "allow": ["_id", "_rev"] }],
        "react/forbid-prop-types": [true, { "forbid": ["array", "any"] }]
    }
}